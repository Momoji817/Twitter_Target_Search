<div class= "container">
  <div class="row">
    <%= form_with url: following_candidates_path do |f| %>
      <h1>フォロー候補検索</h1>
      <div class="form-group">
        <%= f.label :screen_name %>
        <%= f.text_field :screen_name %>
      </div>
      <%= f.button "検索", { controller: 'following_candidates' } %>
    <% end %>
    
    <!-- 検索結果 -->
    <%= render partial: 'search_results', collection: @result, as: :result %>
  </div>
</div>
